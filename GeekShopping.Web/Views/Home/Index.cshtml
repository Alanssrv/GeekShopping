@model IEnumerable<GeekShopping.Web.Models.ProductModel>

<form>
    <div class="container row">
        @foreach(var product in Model)
        {
            <div class="col-4">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top" />
                        <div class="card-body">
                            <h3 class="card-title text-success text-truncate">@product.Name</h3>
                            <span class="badge badge-light mb-2">@product.CategoryName</span>
                            <p class="card-text paragraph-text-heigh">@Html.Raw(product.Description)</p>
                            <div class="row">
                                <div class="col pt-1">
                                    <span style="font-size: 23px;">@string.Format("{0:c}", product.Price)</span>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
<style>
    .paragraph-text-heigh {
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 5; /* number of lines to show */
        line-clamp: 5;
        -webkit-box-orient: vertical;
    }
</style>